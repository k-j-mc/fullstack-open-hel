{
	"name": "notes-frontend",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"axios": "^1.4.0",
		"dotenv": "^16.3.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-scripts": "5.0.1",
		"web-vitals": "^2.1.4"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"server": "json-server -p3001 --watch db.json",
		"lint": "eslint './src/**/*.{js,jsx}'",
		"lint-fix": "eslint './src/**/*.{js,jsx}' --fix",
